---
import { getImageUrl } from "../js/backend.mjs";
import { Image } from "astro:assets";

const { record, imageField } = Astro.props;

const imageURL = await getImageUrl(record, imageField);
---

{
    imageURL && (
        <Image
            src={imageURL}
            alt={record.nomMaison || "Image"}
            inferSize={true}
            width={300}
            height={200}
        />
    )
}
